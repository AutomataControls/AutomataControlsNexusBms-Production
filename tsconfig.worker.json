{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "./dist",
    "noImplicitAny": false,
    "strict": false,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "lib/workers/enhanced-equipment-worker.ts",
    "lib/workers/location-processors/*.ts",
    "lib/influxdb-client.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
